{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "~/*": ["*"] },
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "outDir": "./bin",
    "isolatedModules": true
  },
  "exclude": ["node_modules"],
  "include": ["lib/**/*.ts"]
}
